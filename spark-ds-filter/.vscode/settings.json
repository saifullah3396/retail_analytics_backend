        "--src=${workspaceFolder}"
    ],
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/__pycache__": true,
    }
}